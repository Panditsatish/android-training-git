<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash"
    tools:context=".ui.splash.splash">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="@dimen/_110sdp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_splash1"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_cafe_1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_splash2"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_cafe_2"
            android:layout_marginLeft="@dimen/_12sdp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_splash3"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_150sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:src="@drawable/ic_cafe_3" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>